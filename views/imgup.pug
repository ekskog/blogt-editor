extends layout
block content
  .editor-container
    form(action="/editor/imgup" method="POST" enctype="multipart/form-data")
      .editor-form-group.formGroup

      .editor-form-group
        label(for="file") Choose File:
        input#file(type="file" name="file" required)

      .editor-form-group
        label.editor-label(for="date") Select a date:
        input#dateField(type="date" name="dateField" required)

      
      .editor-form-actions
        button.submit-btn(type="submit") Submit