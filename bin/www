#!/usr/bin/env node

var app = require('../app');
var debug = require('debug')('blogt-editor:www-bin');
var http = require('http');
var os = require('os');

// Port selection logic with diagnostics:
// - If `PORT` is explicitly set, use it.
// - Else if `MODE=dev` and `DEV_PORT` is set, use DEV_PORT.
// - Else if running inside container (IN_CONTAINER=1), use 3000.
// - Otherwise default to 3000.
var chosenPort;
if (process.env.PORT) {
  chosenPort = process.env.PORT;
} else if (process.env.MODE === 'dev' && process.env.DEV_PORT) {
  chosenPort = process.env.DEV_PORT;
} else if (process.env.IN_CONTAINER) {
  chosenPort = '3000';
} else {
  chosenPort = '3000';
}

// Diagnostic output to make selection visible
debug('MODE:', process.env.MODE || '(not set)');

var port = normalizePort(chosenPort);
app.set('port', port);

var server = http.createServer(app);

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

function normalizePort(val) {
  var port = parseInt(val, 10);
  
  if (isNaN(port)) return val; // named pipe
  if (port >= 0) return port; // port number
  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') throw error;

  var bind = typeof port === 'string' ? 'Pipe ' + port : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
  
  let today = new Date();
  console.log('Listening on ' + bind);
  debug(`${today}`);
}
